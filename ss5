#!/bin/bash
set -e

PORT_HTTP=24000
PORT_SOCKS=25000
USERNAME="aac"
PASSWORD="yiyann***999"
CONFIG_PATH="/etc/3proxy/3proxy.cfg"

echo "ðŸ“¦ å®‰è£… 3proxy..."

apt update
apt install -y 3proxy

# å†™å…¥é…ç½®æ–‡ä»¶
cat > $CONFIG_PATH <<EOF
daemon
maxconn 1000
nserver 8.8.8.8
nscache 65536
timeouts 1 5 30 60 180 1800 15 60

users $USERNAME:CL:$PASSWORD
auth strong

proxy -n -a -p$PORT_HTTP -i0.0.0.0 -e0.0.0.0
socks -p$PORT_SOCKS

flush
EOF

# åˆ›å»º systemd æœåŠ¡æ–‡ä»¶
cat > /etc/systemd/system/3proxy.service <<EOF
[Unit]
Description=3proxy Proxy Server
After=network.target

[Service]
ExecStart=/usr/bin/3proxy $CONFIG_PATH
ExecReload=/bin/kill -HUP \$MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
EOF

# å¯åŠ¨æœåŠ¡
systemctl daemon-reload
systemctl enable 3proxy
systemctl restart 3proxy

IP=$(curl -s ifconfig.me)

echo "âœ… å®‰è£…æˆåŠŸï¼"
echo "----------------------------------------"
echo "ðŸŒ HTTP ä»£ç†åœ°å€: http://$USERNAME:$PASSWORD@$IP:$PORT_HTTP"
echo "ðŸ§¦ SOCKS5 ä»£ç†åœ°å€: socks5://$USERNAME:$PASSWORD@$IP:$PORT_SOCKS"
echo "----------------------------------------"
